{
  "name": "Plzstop",
  "version": "1.2",
  "description": "Block yourself from visiting sites!",
  "background": {
    "scripts": ["./src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "./views/popup.html",
    "default_icon": {
      "16": "images/plzstop16.png",
      "32": "images/plzstop32.png",
      "48": "images/plzstop48.png",
      "128": "images/plzstop128.png"
    }
  },
  "icons": {
    "16": "images/plzstop16.png",
    "32": "images/plzstop32.png",
    "48": "images/plzstop48.png",
    "128": "images/plzstop128.png"
  },
  "permissions": ["webNavigation", "activeTab", "declarativeContent", "storage"],
  "manifest_version": 2
}
